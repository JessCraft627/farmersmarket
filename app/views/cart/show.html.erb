<h3><%= flash[:notice] %></h3>
<div class="your_cart_page">


<%= image_tag  "your-cart.png", class: "signup" %>

<ol class="cart_show_page">
  <% @cart_products.each do |cart_product| %>
    <li class="border_bottoms"> <p class="bold"><%= cart_product.name %></p>  Quantity: <p class="spaces"> <%= @quantities.count(cart_product.id.to_s) %></p>  $<%= cart_product.price %> </li>
  <% end %>
  <br>

</ol>

 <%= button_to "Continue Shopping", root_path,  method: :get, class: "clear_button btns" %>
<%= button_to "Clear Cart", clear_cart_path, class: "clear_button bttns" %>
<h2 class="total_cost">Total: $<%= @total_costs %></h2>
<%= button_to "Checkout", login_path, method: :get, class: "checkout_button" %>

</div>
